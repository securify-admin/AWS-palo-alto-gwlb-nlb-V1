# Terraform backend configuration
# This file is provided as an example. Copy it to backend.tf and modify as needed.
# Using an S3 backend is recommended for team environments.

terraform {
  backend "s3" {
    bucket         = "your-terraform-state-bucket"
    key            = "palo-aws-centralized-inspection/terraform.tfstate"
    region         = "us-west-2"
    dynamodb_table = "terraform-state-lock"
    encrypt        = true
  }
}

